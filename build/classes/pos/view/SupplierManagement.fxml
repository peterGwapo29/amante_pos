<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>

<AnchorPane prefWidth="600" prefHeight="520"
            xmlns="http://javafx.com/javafx/24.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="pos.controller.SupplierManagementController"
            styleClass="sm-root">

    <stylesheets>
        <URL value="@/pos/css/suppliermanagement.css"/>
    </stylesheets>

    <children>
        <VBox spacing="12" AnchorPane.topAnchor="16" AnchorPane.leftAnchor="16"
              AnchorPane.rightAnchor="16" AnchorPane.bottomAnchor="16"
              styleClass="sm-card">

            <!-- Header -->
            <HBox alignment="CENTER_LEFT" spacing="10" styleClass="sm-header">
                <Label text="Manage Suppliers" styleClass="sm-title"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Label text="Add / Update / Delete supplier records" styleClass="sm-subtitle"/>
            </HBox>

            <!-- Table -->
            <TableView fx:id="tableView" VBox.vgrow="ALWAYS" styleClass="sm-table">
                <columns>
                    <TableColumn fx:id="colId" text="ID" prefWidth="60"/>
                    <TableColumn fx:id="colName" text="Name" prefWidth="160"/>
                    <TableColumn fx:id="colEmail" text="Email" prefWidth="190"/>
                    <TableColumn fx:id="colPhone" text="Phone" prefWidth="140"/>
                </columns>
            </TableView>

            <!-- Form -->
            <GridPane hgap="10" vgap="10" styleClass="sm-form">
                <columnConstraints>
                    <ColumnConstraints percentWidth="50"/>
                    <ColumnConstraints percentWidth="50"/>
                </columnConstraints>

                <TextField fx:id="txtName" promptText="Supplier Name" styleClass="sm-field"
                           GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <TextField fx:id="txtEmail" promptText="Email" styleClass="sm-field"
                           GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                <TextField fx:id="txtPhone" promptText="Phone" styleClass="sm-field"
                           GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <TextField fx:id="txtAddress" promptText="Address" styleClass="sm-field"
                           GridPane.rowIndex="1" GridPane.columnIndex="1"/>
            </GridPane>

            <!-- Actions -->
            <HBox spacing="10" alignment="CENTER_RIGHT">
                <Button text="Delete" onAction="#deleteSupplier" styleClass="sm-btn-danger"/>
                <Button text="Update" onAction="#updateSupplier" styleClass="sm-btn-secondary"/>
                <Button text="Add" onAction="#addSupplier" styleClass="sm-btn-primary"/>
            </HBox>

        </VBox>
    </children>
</AnchorPane>
