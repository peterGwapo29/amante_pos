<AnchorPane fx:id="rootPane" prefHeight="800.0" prefWidth="1440.0" styleClass="page-root" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pos.controller.DashboardController">

    <stylesheets>
        <URL value="@/pos/css/dashboard.css" />
    </stylesheets>

    <children>
        <!-- Sidebar Placeholder (fx:id unchanged) -->
        <AnchorPane fx:id="sidebarContainer" layoutX="0.0" layoutY="0.0" prefHeight="800.0" prefWidth="250.0" />

        <!-- Background -->
        <Rectangle fill="#f5f5f5" height="800.0" layoutX="250.0" layoutY="0.0" strokeWidth="0.0" width="1190.0" />

        <!-- Shopee Top Header -->
        <HBox alignment="CENTER_LEFT" layoutX="250.0" layoutY="0.0" prefHeight="78.0" prefWidth="1190.0" spacing="6.0" styleClass="topbar">
            <padding>
                <Insets bottom="0" left="18" right="18" top="0" />
            </padding>

            <Label styleClass="topbar-title" text="Welcome,">
                <font><Font name="Arial" size="20.0" /></font>
            </Label>

            <Label fx:id="adminName" styleClass="topbar-title-strong" text="Admin Name">
                <font><Font name="Arial" size="20.0" /></font>
            </Label>

            <Label fx:id="roleText" styleClass="topbar-title-muted" text="(Role)">
                <font><Font name="Arial" size="20.0" /></font>
            </Label>
        </HBox>

        <!-- Content Area (fx:id unchanged) -->
        <!-- Content Area (fx:id unchanged) -->
<AnchorPane fx:id="contentArea"
            layoutX="250.0" layoutY="88.0"
            prefHeight="700.0" prefWidth="1190.0"
            styleClass="content-area">

    <children>

        <!-- Overview title -->
        <Label layoutX="18.0" layoutY="14.0"
               styleClass="section-title"
               text="Overview"/>

        <!-- Cards row -->
        <HBox layoutX="18.0" layoutY="52.0" spacing="12.0">

            <!-- Card 1 -->
            <VBox prefWidth="280.0" spacing="6" styleClass="card">
                <padding>
                    <Insets top="14" right="14" bottom="14" left="14"/>
                </padding>
                <Label text="Total Sales (Today)" styleClass="card-label"/>
                <Label fx:id="lblTotalSalesToday"
                       text="â‚± 0.00"
                       styleClass="card-value"/>
                <Label fx:id="lblSalesVsYesterday"
                       text="+0% vs yesterday"
                       styleClass="card-sub"/>
            </VBox>

            <!-- Card 2 -->
            <VBox prefWidth="280.0" spacing="6" styleClass="card">
                <padding>
                    <Insets top="14" right="14" bottom="14" left="14"/>
                </padding>
                <Label text="Transactions" styleClass="card-label"/>
                <Label fx:id="lblTransactionsToday"
                       text="0"
                       styleClass="card-value"/>
                <Label text="Today" styleClass="card-sub"/>
            </VBox>

            <!-- Card 3 -->
            <VBox prefWidth="280.0" spacing="6" styleClass="card">
                <padding>
                    <Insets top="14" right="14" bottom="14" left="14"/>
                </padding>
                <Label text="Items Sold" styleClass="card-label"/>
                <Label fx:id="lblItemsSoldToday"
                       text="0"
                       styleClass="card-value"/>
                <Label text="Today" styleClass="card-sub"/>
            </VBox>

            <!-- Card 4 -->
            <VBox prefWidth="280.0" spacing="6" styleClass="card card-accent">
                <padding>
                    <Insets top="14" right="14" bottom="14" left="14"/>
                </padding>
                <Label text="Low Stock Alerts" styleClass="card-label"/>
                <Label fx:id="lblLowStockCount"
                       text="0"
                       styleClass="card-value-accent"/>
                <Label text="Needs restock" styleClass="card-sub"/>
            </VBox>

        </HBox>

    </children>
</AnchorPane>


