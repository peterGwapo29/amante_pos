<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.text.Text?>

<AnchorPane fx:id="registerBody"
            prefHeight="500.0" prefWidth="800.0"
            xmlns="http://javafx.com/javafx/24.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="pos.controller.RegisterController"
            styleClass="root">

    <stylesheets>
        <URL value="@/pos/css/register.css"/>
    </stylesheets>

    <children>

        <!-- Decorative background (same vibe as login) -->
        <StackPane AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0"
                   AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
                   pickOnBounds="false" mouseTransparent="true">
        </StackPane>

        <!-- Content -->
        <VBox alignment="CENTER" spacing="18"
              AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0"
              AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
              styleClass="content">

            <VBox alignment="CENTER" spacing="6">
                <Text text="Create an account" styleClass="title"/>
                <Text text="Sign up to get started." styleClass="subtitle"/>
            </VBox>

            <VBox styleClass="card" spacing="14"
                  maxWidth="420" minWidth="280">

                <VBox spacing="6">
                    <Label text="Email" styleClass="field-label"/>
                    <TextField fx:id="textEmailaddress"
                               promptText="Email Address"
                               styleClass="field"
                               maxWidth="Infinity"/>
                </VBox>

                <VBox spacing="6">
                    <Label text="Password" styleClass="field-label"/>
                    <PasswordField fx:id="textPassword"
                                   promptText="Password"
                                   styleClass="field"
                                   maxWidth="Infinity"/>
                </VBox>

                <VBox spacing="6">
                    <Label text="Confirm Password" styleClass="field-label"/>
                    <PasswordField fx:id="textConfirmPassword"
                                   promptText="Confirm Password"
                                   styleClass="field"
                                   maxWidth="Infinity"/>
                </VBox>

                <Button fx:id="SignupButton"
                        text="Sign Up"
                        onAction="#handleSignUpButton"
                        styleClass="primary-button"
                        maxWidth="Infinity"
                        prefHeight="42"/>

                <HBox alignment="CENTER" spacing="6">
                    <Text text="Already have an account?" styleClass="muted-text"/>
                    <Hyperlink fx:id="SigninLink"
                               text="Sign in"
                               onAction="#handleSigninButton"
                               styleClass="link"/>
                </HBox>

            </VBox>
        </VBox>

    </children>
</AnchorPane>
