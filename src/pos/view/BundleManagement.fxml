<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefWidth="860" prefHeight="520"
            xmlns="http://javafx.com/javafx/24.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="pos.controller.BundleManagementController"
            styleClass="bm-root">

    <stylesheets>
        <URL value="@/pos/css/bundlemanagement.css"/>
    </stylesheets>

    <children>
        <VBox spacing="12"
              AnchorPane.topAnchor="16" AnchorPane.leftAnchor="16"
              AnchorPane.rightAnchor="16" AnchorPane.bottomAnchor="16"
              styleClass="bm-card">

            <!-- Header -->
            <HBox alignment="CENTER_LEFT" spacing="10">
                <Label fx:id="lblTitle" text="Manage Bundle Items" styleClass="bm-title"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Label text="Add products inside a bundle and set quantity"
                       styleClass="bm-subtitle"/>
            </HBox>

            <!-- Table -->
            <TableView fx:id="tableView" VBox.vgrow="ALWAYS" styleClass="bm-table">
                <columns>
                    <TableColumn fx:id="colId" text="ID" prefWidth="80"/>
                    <TableColumn fx:id="colItemName" text="Item Product" prefWidth="520"/>
                    <TableColumn fx:id="colQty" text="Qty" prefWidth="120"/>
                </columns>
            </TableView>

            <!-- Form row -->
            <GridPane hgap="10" vgap="10" styleClass="bm-form">
                <columnConstraints>
                    <ColumnConstraints percentWidth="70"/>
                    <ColumnConstraints percentWidth="30"/>
                </columnConstraints>

                <ComboBox fx:id="cmbProducts" promptText="Select product item"
                          styleClass="bm-field"
                          GridPane.rowIndex="0" GridPane.columnIndex="0"/>

                <TextField fx:id="txtQty" promptText="Qty"
                           styleClass="bm-field"
                           GridPane.rowIndex="0" GridPane.columnIndex="1"/>
            </GridPane>

            <!-- Actions -->
            <HBox spacing="10" alignment="CENTER_RIGHT">
                <Button text="Delete Item" onAction="#deleteItem" styleClass="bm-btn-danger"/>
                <Button text="Update Qty" onAction="#updateQty" styleClass="bm-btn-secondary"/>
                <Button text="Add Item" onAction="#addItem" styleClass="bm-btn-primary"/>
            </HBox>

        </VBox>
    </children>
</AnchorPane>
